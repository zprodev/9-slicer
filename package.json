{
  "name": "9-slicer",
  "version": "0.0.1",
  "description": "Convert PNG to 9 slice format",
  "main": "dist/cjs/9slicer.js",
  "module": "dist/tsc/index.js",
  "types": "dist/tsc/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "run-s build:tsc build:rollup:module build:rollup:browser build:uglifyjs build:test",
    "build:lint": "tslint --fix './src/**/*.ts'",
    "build:tsc": "tsc",
    "build:rollup:module": "rollup -c",
    "build:rollup:browser": "rollup -c --environment BROWSER",
    "build:uglifyjs": "uglifyjs ./dist/browser/9slicer.js -o ./dist/browser/9slicer.min.js -cm --source-map --comments",
    "build:test": "mocha",
    "dev": "run-p dev:tsc dev:rollup dev:test",
    "dev:tsc": "tsc -w",
    "dev:rollup": "rollup -c -w --environment DEV",
    "dev:test": "mocha test/index.js -w",
    "demo": "browser-sync start --server demo",
    "lint": "tslint './src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zprodev/9-slicer.git"
  },
  "author": "zprodev <zproject.develop@gmail.com> (https://github.com/zprodev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zprodev/9-slicer/issues"
  },
  "homepage": "https://github.com/zprodev/9-slicer#readme",
  "dependencies": {
    "png.es": "^0.4.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^0.67.4",
    "rollup-plugin-node-resolve": "^3.4.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "uglify-es": "^3.3.9"
  }
}
